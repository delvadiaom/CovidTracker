<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelplineNumberActivity">

    <TextView
        android:id="@+id/helpandsupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="5dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Help And Support"/>

    <ImageView
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />


    <TextView
        android:id="@+id/helplinetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpandsupport"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="24x7 Helpline"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/helplinetxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Always there to help you, no matter the time zone"
        android:layout_below="@id/helplinetxt"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginLeft="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/helplinenumers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/helplinetxt2"
        android:layout_marginRight="10dp"
        tools:listitem="@layout/helplinenumberofstates" />


</RelativeLayout>